# Install EditorConfig Plugin on your IDE for one coding style
# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 79

[*.md]
trim_trailing_whitespace = false

[*.{py,json,rst,ini,js,go,lua,sql}]
indent_style = space
indent_size = 4

[*.{yml,html,xml}]
indent_style = space
indent_size = 4
